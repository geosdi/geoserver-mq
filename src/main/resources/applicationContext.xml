<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd"
       default-autowire="byName">

    <bean id="gsmqPropertyConfigurer"
          class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="placeholderPrefix" value="geoservermq{" />
        <property name="placeholderSuffix" value="}" />
        <property name="nullValue" value="@null" />
        <property name="locations">
            <list>
                <value>classpath:geoservermq.properties</value>
                <value>file:${GP_DATA_DIR}/geoservermq.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>
    
    <beans>
        <bean id="geoserverSender" class="org.geosdi.geoservermq.sender.GeoserverSenderMQ">
            <constructor-arg ref="resourceLoader" />
            <constructor-arg ref="rawCatalog" />
            <constructor-arg value="geoservermq{brokerURL}"/>
        </bean>
        
        <bean id="geoserverReceiver" class="org.geosdi.geoservermq.receiver.GeoserverReceiverMQ">
            <constructor-arg ref="resourceLoader" />
            <constructor-arg ref="rawCatalog" />
            <constructor-arg value="geoservermq{brokerURL}"/>
            <constructor-arg ref="geoserverSender" />
        </bean>
    </beans>

</beans>